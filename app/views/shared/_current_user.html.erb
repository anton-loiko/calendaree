<% if current_user.present? %>
  <div class="current_user">



    <div class="dropdown">
      <button class="dropdown__button">
        <%= render partial: 'shared/avatar', locals: { user: current_user, size: 'm' } %>
      </button>
      <div class="dropdown__content dropdown__content--right">
        <p class="dropdown__item dropdown__item--ho-hover current_user__name ">
          <%= current_user.name  %>
        </p>

        <%= link_to "Logout", logout_path, class: 'dropdown__item g_id_signout' %>
      </div>
    </div>


  </div>
<% end %>